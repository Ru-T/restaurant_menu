<p id="notice"><%= notice %></p>

<h1>Restaurant Menu</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<tbody>
<% @courses.each do |course| %>
  <tr>
    <td><%= course.name %></td>
      <% course.dishes.each do |dish| %>
        <tr>
          <td><%= dish.name %></td>
          <td><%= dish.description %></td>
          <td><%= dish.price %></td>
          <td><%= dish.course_id %></td>
          <td><%= link_to 'edit', edit_dish_path(dish) %></td>
        </tr>
      <% end %>
    </tr>
<% end %>
</tbody>
</table>

<%= link_to 'New Dish', new_dish_path %>
