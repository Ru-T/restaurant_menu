<div class="container">

  <p id="notice"><%= notice %></p>

<h2 class="text-center">Restaurant Menu</h2>

<% @courses.each do |course| %>
  <div class="row">
    <div class="col-md-4"><h3 class="text-center"><%= course.name %>
      <button type="button" class="btn btn-warning"><%= link_to 'New Dish', new_dish_path(course_id: course.id)%></button>
    </h3>
      <% if course.id == 1 %>
      <%= image_tag asset_url("appetizers.jpg"), class: "img-circle" %>
      <% elsif course.id == 2 %>
        <%= image_tag asset_url("tagine.jpg"), class: "img-circle" %>
      <% else course.id == 3 %>
        <%= image_tag asset_url("baklava.jpg"), class: "img-circle" %>
      <% end %>
    </div>
      <div class="col-md-4">
      <% course.dishes.each do |dish| %>
          <dl>
            <br />
            <dt><a href= <%= edit_dish_path(dish) %>> <%= dish.name%></a></p></dt>
          </div>
      <div class="col-md-6">
            <dd>Description: <%= dish.description %></dd>
            <br />
            <dd>Price: $<%= dish.price.to_i %></dd>
            <br />
          <% end %>
          </dl>
        <br />
    </div>
  </div>
<% end %>

</div>
