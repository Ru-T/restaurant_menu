<p id="notice"><%= notice %></p>

<h1>Restaurant Menu</h1>







<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Course</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dishes.each do |dish| %>
      <tr>
        <td><%= dish.name %></td>
        <td><%= dish.description %></td>
        <td><%= dish.price %></td>
        <td><%= dish.course_id %></td>
        <td><%= link_to 'Edit', edit_dish_path(dish) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

